<% if user_signed_in? %>
	<div class="jumbotron">
		<h1>You're logged in</h1>
	</div>
<% else %>
	<div class="jumbotron">
		<h1>Welcome to One Month Rails!</h1>
		<p>
		  You've found the home page for the
		  <%= link_to "One Month Rails", "http://onemonthrails.com" %>
		  application.
		</p>
		<p>
		  <button type="button" class="btn btn-default btn-lg"><%= link_to "Sign Up Now!", new_user_registration_path %></button>
		</p>
	</div>
<% end %>



